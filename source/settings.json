{
  "name": "Fuzzco",
  "version": "0.1.1",
  "images": [
    {
      "variable": "logo",
      "label": "Logo",
      "description": "Adds your logo to the header"
    },
    {
      "variable": "background_image",
      "label": "Background Image",
      "description": "Adds a repeating background image by replacing some instances the background color."
    },
    {
      "variable": "accent_image",
      "label": "Accent Image",
      "description": "Adds a repeating background image by replacing some instances the accent color."
    }
  ],
  "fonts": [
    {
      "variable": "header_font",
      "label": "Header Font",
      "default": "Cutive"
    },
    {
      "variable": "text_font",
      "label": "Text Font",
      "default": "Montserrat"
    }
  ],
  "colors": [
    {
      "variable": "background_color",
      "label": "Background",
      "default": "#FFFFFF"
    },
    {
      "variable": "text_color",
      "label": "Text Color",
      "default": "#0000FF"
    },
    {
      "variable": "highlight_color",
      "label": "Highlight Color",
      "default": "#00FF01"
    },
    {
      "variable": "accent_color",
      "label": "Accent Color",
      "default": "#F0F0F0"
    }
  ],
  "options": [
    {
      "variable": "show_social",
      "label": "Show social media buttons",
      "type": "boolean",
      "default": true,
      "description": "Adds social media share buttons to product pages"
    },
    {
      "variable": "show_view_badges",
      "label": "Show view badges",
      "type": "boolean",
      "default": true,
      "description": "Adds circular \"view product\" badges on top of product thumbnails"
    },
    {
      "variable": "footer_text",
      "label": "Footer Text",
      "type": "text",
      "description": "Bottom right text in footer. Leave blank to display store URL."
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 15,
      "description": "The number of products shown per page"
    }
  ],
  "checkout": {
    "optimize_legibility": true,
    "antialias_text": true,
    "header_image": "{{image}}",
    "header_width": "900px",
    "background_color": "{{background_color}}",
    "content_background_color": "{{background_color}}",
    "content_header_background_color": "{{background_color}}",
    "content_color": "{{text_color}}",
    "content_header_color": "{{text_color}}",
    "content_border_color": "{{background_color}}",
    "content_border_width": "5px",
    "content_header_vertical_padding": "80px",
    "error_background_color": "{{highlight_color}}",
    "error_color": "{{text_color}}",
    "error_border_color": "{{highlight_color}}",
    "step_border_style": "solid",
    "step_border_color": "{{text_color}}",
    "step_border_width": "3px",
    "step_background_color": "{{accent_color}}",
    "step_inactive_background_color": "{{background_color}}",
    "body_font": "{{text_font}}",
    "input_font": "{{text_font}}",
    "input_focus_border_color": "{{text_color}}",
    "input_focus_color": "{{text_color}}",
    "title_font": "{{header_font}}",
    "title_color": "{{text_color}}",
    "button_font": "{{text_font}}",
    "button_color": "{{text_color}}",
    "button_background_color": "{{background_color}}",
    "button_border_width": "3px",
    "button_border_color": "{{text_color}}",
    "button_hover_background_color": "{{text_color}}",
    "button_hover_border_color": "{{text_color}}",
    "button_hover_color": "{{background_color}}",
    "summary_color": "{{text_color}}",
    "summary_secondary_color": "{{text_color}}",
    "summary_submit_border_color": "#bcbcbc",
    "link_color": "{{text_color}}",
    "link_hover_color": "#bcbcbc"
  }
}
